<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvResNumber"
            android:layout_alignStart="@+id/tvResName"
            android:layout_weight="1"
            android:text="ZZZZ"
            android:textColor="#747474" />

        <TextView
            android:id="@+id/tvResName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="ABCDE"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvResAddress"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvResName"
            android:layout_below="@+id/tvResName"
            android:layout_weight="1"
            android:text="12345"
            android:textColor="#747474" />

        <TextView
            android:id="@+id/tvResNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnResSelect"
            android:layout_alignStart="@+id/tvResName"
            android:layout_weight="1"
            android:autoLink="phone"
            android:clickable="true"
            android:text="12345"
            android:textColor="#00549d" />

        <TextView
            android:id="@+id/tvResType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvName"
            android:layout_alignStart="@+id/tvName"
            android:layout_weight="1"
            android:text="ZZZZ"
            android:textColor="#747474" />

        <TextView
            android:id="@+id/tvResDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvResName"
            android:layout_below="@+id/tvResAddress"
            android:layout_weight="1"
            android:text="QWERTY"
            android:textColor="#3a9ee6"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnResSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Select" />

        <ImageView
            android:id="@+id/ivResImage"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/ivResStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/tvResNumber"
            android:layout_alignEnd="@+id/ivResImage"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />


    </RelativeLayout>




</LinearLayout>