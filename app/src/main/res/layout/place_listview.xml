<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/ivPlaceImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="15dp">
        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivTourImage"
            android:layout_toRightOf="@+id/ivTourImage"
            android:paddingLeft="5dp"
            android:textColor="#333"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvPlaceInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPlaceName"
            android:layout_toEndOf="@+id/ivPlaceImage"
            android:layout_toRightOf="@+id/ivPlaceImage"
            android:layout_weight="1"
            android:textColor="#333"
            android:paddingLeft="5dp" />
        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_toEndOf="@+id/ivPlaceImage"
            android:layout_toRightOf="@+id/ivPlaceImage"
            android:layout_weight="1"
            android:textColor="#333"
            android:paddingLeft="5dp" />
    </LinearLayout>


</LinearLayout>
