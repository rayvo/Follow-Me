<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="ABCDE"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvPlaceAddress"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvPlaceName"
            android:layout_below="@+id/tvPlaceName"
            android:layout_weight="1"
            android:text="12345"
            android:textColor="#747474" />

        <TextView
            android:id="@+id/tvPlaceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom ="@+id/btnPlaceSelect"
            android:layout_alignStart="@+id/tvPlaceName"
            android:layout_weight="1"
            android:autoLink="phone"
            android:clickable="true"
            android:text="12345"
            android:textColor="#00549d" />

        <TextView
            android:id="@+id/tvPlaceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvPlaceNumber"
            android:layout_alignStart="@+id/tvPlaceName"
            android:layout_weight="1"
            android:text="ZZZZ"
            android:textColor="#747474" />

        <TextView
            android:id="@+id/tvPlaceDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPlaceStar"
            android:layout_alignStart="@+id/ivPlaceImage"
            android:layout_weight="1"
            android:text="QWERTY"
            android:visibility="invisible"
            android:textColor="#3a9ee6" />

        <Button
            android:id="@+id/btnPlaceSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Select" />

        <ImageView
            android:id="@+id/ivPlaceImage"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/ivPlaceStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/btnPlaceSelect"
            android:layout_alignEnd="@+id/ivPlaceImage"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />


    </RelativeLayout>




</LinearLayout>